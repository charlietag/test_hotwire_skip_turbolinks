<h1>New Message</h1>

<%= turbo_frame_tag "new_message", target: "_top" do  %>
  <%=form_with(model: [ @message.room, @message ],
               data: { controller: "resetform", 'resetform-target': "myform", action: 'turbo:submit-end->resetform#reset' }) do |form| %>
    <div class="field">
      <%= form.text_field :content, focus: true, 'data-resetform-target': :content %>
      <%= form.submit "send", 'data-resetform-target': 'send' %>
    </div>
  <% end %>
<% end %>
<%= link_to 'Back', @message.room %>
